# Environment Configuration for Team Collaboration Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For Local MongoDB
MONGODB_URI=mongodb://localhost:27017/team-collaboration

# For MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/team-collaboration?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Firebase Configuration (Optional)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Additional Configuration
LOG_LEVEL=debug

